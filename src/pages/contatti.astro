---
// src/pages/contatti.astro
import Layout from '../layouts/Layout.astro';

import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Contatti - Servizi di Pulizia">
<Navbar />
  <main class="min-h-[calc(100vh-320px)] bg-gray-50">
    <section class="container mx-auto px-4 max-w-6xl py-20">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-blue-600 mb-4">Contattaci</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Siamo a tua disposizione per qualsiasi informazione o preventivo senza impegno</p>
      </div>

      <div class="bg-white rounded-xl shadow-xl p-8 md:p-12 lg:p-16">
        <div class="grid md:grid-cols-2 gap-12 lg:gap-16">
          <!-- Colonna sinistra - Contatti -->
          <div class="space-y-10">
            <div class="flex flex-col items-center md:items-start text-center md:text-left">
              <h2 class="text-2xl lg:text-3xl font-semibold text-gray-800 mb-8">Come possiamo aiutarti?</h2>
              
              <!-- Email -->
              <div class="flex flex-col md:flex-row items-center w-full md:max-w-md mb-8">
                <div class="bg-blue-100 p-3 rounded-xl mb-4 md:mr-5 md:mb-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-500 text-lg">Scrivici una email</h3>
                  <a href="mailto:luca197533@gmail.it" class="text-base md:text-xl text-blue-600 hover:text-blue-800 hover:underline break-all">luca197533@gmail.it</a>
                  <br>
                  <a href="mailto:eros.vigliaturo7@gmail.com" class="text-base md:text-xl text-blue-600 hover:text-blue-800 hover:underline break-all">eros.vigliaturo7@gmail.com</a>
                </div>
              </div>

              <!-- Telefono -->
              <div class="flex flex-col md:flex-row items-center w-full md:max-w-md">
                <div class="bg-blue-100 p-3 rounded-xl mb-4 md:mr-5 md:mb-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-500 text-lg">Chiamaci</h3>
                  <a href="tel:+393314108577" class="text-base md:text-xl text-blue-600 hover:text-blue-800 hover:underline">Luca: +393314108577</a>
                  <br>
                  <a href="tel:+393314023828" class="text-base md:text-xl text-blue-600 hover:text-blue-800 hover:underline">Eros: +393314023828</a>
                </div>
              </div>
            </div>
          </div>

          <!-- Colonna destra - Orari -->
          <div class="flex flex-col items-center md:items-start">
            <h2 class="text-2xl lg:text-3xl font-semibold text-gray-800 mb-8">Orari di apertura</h2>
            
            <div class="bg-gray-50 rounded-xl p-8 w-full max-w-md">
              <ul class="space-y-5 text-lg">
                <li class="flex justify-between pb-3 border-b border-gray-200 gap-4">
                  <span class="font-medium">Luned√¨ - Sabato</span>
                  <span class="font-semibold">8:00 - 18:00</span>
                </li>
                <li class="flex justify-between">
                  <span class="font-medium">Domenica</span>
                  <span class="text-gray-400 font-medium">Chiuso</span>
                </li>
              </ul>
              
              <div class="mt-8 pt-6 border-t border-gray-200">
                <p class="text-gray-600">Per emergenze fuori orario, contattare il numero telefonico</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
<Footer />
<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>